<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <solid android:color="@color/black_color" />
            <padding
                android:top="2dp"
                android:left="2dp"
                android:right="2dp"
                android:bottom="2dp"
                />

            <corners
                android:radius="2dp"
                />



        </shape>
    </item>
    <!-- Colored rectangle make another gradient with corners-->
    <item android:drawable="@drawable/gradient_bg"

        >
    </item>

    <item
        android:top="20dp"
        android:bottom="-5dp"
        android:right="15dp">
        <rotate
            android:fromDegrees="-60">
            <shape android:shape="rectangle">
                <solid android:color="@color/black_color" />
                <padding
                    android:top="2dp"
                    android:left="2dp"
                    android:right="2dp"
                    android:bottom="2dp"
                    />
            </shape>
        </rotate>
    </item>
    <!-- Overlay with same color as background-->
    <item
        android:top="20dp"
        android:bottom="-5dp"
        android:right="15dp">
        <rotate
            android:fromDegrees="-60">
            <shape android:shape="rectangle">
                <solid android:color="@color/white" />

            </shape>
        </rotate>
    </item>
</layer-list>