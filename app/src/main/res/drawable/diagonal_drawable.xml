<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <solid android:color="@color/colorPrimaryDark" />
            <padding
                android:top="2dp"
                android:left="2dp"
                android:right="2dp"
                android:bottom="2dp"
                />

            <corners
                android:radius="5dp"
                />



        </shape>
    </item>
    <!-- Colored rectangle make another gradient with corners-->
    <item >

    <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle" >

        <gradient
            android:endColor="#cecece"
            android:gradientRadius="1200"
            android:startColor="#eeeeee"
            android:centerX="50%"
            android:centerY="50%"
            android:type="radial" >
        </gradient>

        <corners
            android:radius="4dp"/>

    </shape>
    </item>

</layer-list>