<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/gradient_bg">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <TextView
            android:id="@+id/txvGetOtp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/padding_120"
            android:background="@drawable/get_otp_bg"
            android:elevation="@dimen/padding_5"
            android:gravity="center"
            android:paddingLeft="@dimen/padding_50"
            android:paddingRight="@dimen/padding_50"
            android:text="@string/get_otp"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_15sp" />

        <EditText
            android:id="@+id/edtMobile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/txvGetOtp"
            android:layout_marginBottom="@dimen/padding_20"
            android:layout_marginLeft="@dimen/padding_50"
            android:layout_marginRight="@dimen/padding_50"
            android:inputType="number"
            android:paddingLeft="@dimen/padding_20"
            android:drawablePadding="@dimen/padding_15"
            android:backgroundTint="@color/white"
            android:drawableLeft="@drawable/mobile_72"
            android:drawableStart="@drawable/mobile_72"
            android:gravity="start|center_vertical"
            android:hint="@string/enter_your_mobile_number"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:textSize="@dimen/expiry_text_size" />

        <ImageView
            android:id="@+id/imvLogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/edtMobile"
            android:layout_marginBottom="@dimen/padding_160"
            android:layout_centerHorizontal="true"
            android:contentDescription="@string/app_name"
            android:scaleType="center"
            android:src="@drawable/iqmojo_logo" />



    </RelativeLayout>
</ScrollView>