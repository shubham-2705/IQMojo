<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grey_gradient_bg"
    tools:context="com.iqmojo.iq_mojo.ui.fragments.MyPointsFragment">

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:fillViewport="true"
        android:background="@drawable/grey_gradient_bg">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:id="@+id/llyProfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="@dimen/padding_30"
                android:gravity="center"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:weightSum="10">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="5"
                        android:background="@color/grey_text_color" />

                    <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/profile_image"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/profile_pic"
                        app:civ_border_color="@color/grey_text_color"
                        app:civ_border_width="1dp" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="5"
                        android:background="@color/grey_text_color" />

                </LinearLayout>

                <TextView
                    android:id="@+id/text_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:text="Ramesh Kumar"
                    android:textSize="@dimen/profile_name_text_size"
                    android:typeface="monospace" />

                <TextView
                    android:id="@+id/text_rupees"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_7"
                    android:drawableLeft="@drawable/pager_00_inactive"
                    android:drawablePadding="@dimen/margin_5"
                    android:text="125.26"
                    android:textSize="@dimen/profile_name"
                    android:typeface="monospace" />

                <TextView
                    android:id="@+id/text_avail_bal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_10"
                    android:text="@string/avail_bal"
                    android:textSize="@dimen/form_textsize"
                    android:typeface="monospace" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/llyProfile"
                android:gravity="center"
                android:layout_marginTop="@dimen/margin_20"
                android:layout_marginBottom="@dimen/margin_20"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:background="@color/mild_grey">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_15"
                android:paddingLeft="@dimen/padding_15"
                android:text="50 Coins"
                android:drawableLeft="@drawable/iq_add_icon"
                android:drawablePadding="@dimen/margin_10"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/drawer_text_size"
                android:typeface="monospace"
                android:visibility="visible" />

                    <TextView
                        android:id="@+id/txv100"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_30dp"
                        android:layout_marginRight="@dimen/margin_15"
                        android:background="@drawable/red_gradient_rounded_bg"
                        android:gravity="center"
                        android:paddingLeft="@dimen/padding_50"
                        android:paddingRight="@dimen/padding_50"
                        android:text="100"
                        android:textColor="@color/white"
                        android:textSize="@dimen/form_textsize"
                        android:typeface="monospace"
                        android:visibility="visible" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:background="@color/mild_grey">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_15"
                android:paddingLeft="@dimen/padding_15"
                android:text="100 Coins"
                android:drawableLeft="@drawable/iq_add_icon"
                android:drawablePadding="@dimen/margin_10"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/drawer_text_size"
                android:typeface="monospace"
                android:visibility="visible" />

                    <TextView
                        android:id="@+id/txv200"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_30dp"
                        android:layout_marginRight="@dimen/margin_15"
                        android:background="@drawable/red_gradient_rounded_bg"
                        android:gravity="center"
                        android:paddingLeft="@dimen/padding_50"
                        android:paddingRight="@dimen/padding_50"
                        android:text="200"
                        android:textColor="@color/white"
                        android:textSize="@dimen/form_textsize"
                        android:typeface="monospace"
                        android:visibility="visible" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:background="@color/mild_grey">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_alignParentLeft="true"
                android:gravity="center"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/margin_15"
                android:paddingLeft="@dimen/padding_15"
                android:text="250 Coins"
                android:drawableLeft="@drawable/iq_add_icon"
                android:drawablePadding="@dimen/margin_10"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/drawer_text_size"
                android:typeface="monospace"
                android:visibility="visible" />

                    <TextView
                        android:id="@+id/txv300"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/margin_30dp"
                        android:layout_marginRight="@dimen/margin_15"
                        android:background="@drawable/red_gradient_rounded_bg"
                        android:gravity="center"
                        android:paddingLeft="@dimen/padding_50"
                        android:paddingRight="@dimen/padding_50"
                        android:text="300"
                        android:textColor="@color/white"
                        android:textSize="@dimen/form_textsize"
                        android:typeface="monospace"
                        android:visibility="visible" />
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>

